# PostgreSQL
POSTGRES_DB=matriculas_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin

# Backend
DB_HOST=postgres
DB_PORT=5432
DB_NAME=matriculas_db
DB_USERNAME=postgres
DB_PASSWORD=admin
DB_POOL_MAX_SIZE=10
DB_POOL_MIN_IDLE=5
DB_POOL_TIMEOUT=30000
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api/v1
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_WEB=DEBUG
LOG_LEVEL_SQL=DEBUG
ACTUATOR_ENDPOINTS=health,info,metrics
ACTUATOR_SHOW_DETAILS=always
APP_NAME=API Sistema de Matrículas
APP_DESCRIPTION=API REST para gestión de matrículas universitarias
APP_VERSION=1.0.0
APP_TIMEZONE=America/Lima
SWAGGER_ENABLED=true
SWAGGER_PATH=/swagger-ui.html

# Frontend
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_DEV_PORT=5173
VITE_APP_MODE=development
VITE_APP_NAME=Sistema de Matrículas
VITE_APP_VERSION=1.0.0
VITE_ENABLE_LOGS=true