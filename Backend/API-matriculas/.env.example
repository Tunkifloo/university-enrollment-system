# CONFIGURACIÓN DEL SERVIDOR
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api/v1

# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=matriculas_db
DB_USERNAME=tu_usuario
DB_PASSWORD=tu_password

# CONFIGURACIÓN DE POOL DE CONEXIONES
DB_POOL_MAX_SIZE=10
DB_POOL_MIN_IDLE=5
DB_POOL_TIMEOUT=30000

# CONFIGURACIÓN JPA/HIBERNATE
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true

# CONFIGURACIÓN DE LOGGING
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_WEB=DEBUG
LOG_LEVEL_SQL=DEBUG

# CONFIGURACIÓN DE ACTUATOR
ACTUATOR_ENDPOINTS=health,info,metrics
ACTUATOR_SHOW_DETAILS=always

# INFORMACIÓN DE LA APLICACIÓN
APP_NAME=API Sistema de Matrículas
APP_DESCRIPTION=API REST para gestión de matrículas universitarias
APP_VERSION=1.0.0

# CONFIGURACIÓN DE SWAGGER/OPENAPI
SWAGGER_ENABLED=true
SWAGGER_PATH=/swagger-ui.html

# ZONA HORARIA
APP_TIMEZONE=America/Lima